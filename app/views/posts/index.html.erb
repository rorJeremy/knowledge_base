<div class="row">
  <div class="col-sm-3">
    <div class="panel panel-default">
      <div class="panel-heading"><span class="glyphicon glyphicon-search"></span> Search</div>
      <div class="panel-body">
        <form>
          <div class="form-group">
            <input type="text" name="query" ng-model="query.title_tags" placeholder="Search by Title or Tag" class="form-control" />
          </div>
          <div class="form-group">
            <select ng-model="category" ng-options="category.name for category in categories" class="form-control">
              <option value="">Choose Category</option>
            </select>
          </div>
          <div class="form-group">
            <select ng-model="orderProp" class="form-control">
              <option value="updated_at">Oldest</option>
              <option value="-updated_at" selected>Newest</option>
            </select>
          </div>
        </form>
      </div>
    </div>
  </div>
  <div class="col-sm-8">
    <div class="alert alert-info">
      <strong>Can't find what you're looking for?</strong>
      <%= link_to "Create an article.", new_post_path %>
    </div>

    <section class="search-results">
    <ul class="media-list">
      <% @posts.each do |post| %>
        <li class="media">
          <div class="media-body">
            <h3 class="media-heading">
              <%= link_to "[#{post.category["name"]}] #{post["title"]}", post_path(post) %>
            </h3>
            <p align="justify"><strong><%= post["body"] %></strong></p>
            <span><b>Updated on:</b> <em><%= post["updated_at"].strftime("%m/%d/%Y at %I:%M%p") %></em></span>
            <i class="fa fa-tags"></i> <b>Tags:</b> <% post.tags.each do |tag| %> <span class="label label-info"><%= tag["name"] %></span> <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
