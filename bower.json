//this allows us to store our bower components in either the lib or vendor directory, which will allow us to access them in the asset pipeline.
//use the following command to install all added dependencies:
// rake bower:install
// that will install all of our dependencies into the lib directory under '/lib/assets/bower_components'
{
  "lib": {
    "name": "bower-rails generated lib assets",
    "dependencies": { //we install 3 dependencies here.
      "angular": "latest", //the latest version of angular
      "angular-route": "latest", //angular route which will give us access to the routing mechanism
      "angular-resource": "latest", //angular resource which will help us with modeling
      "bootstrap": "~3.0.0"
    }
  },
  "vendor": {
    "name": "bower-rails generated vendor assets",
    "dependencies": {
    }
  }
}